<!DOCTYPE html>
<html>
  <head>
    <title>Taut</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= action_cable_meta_tag %>

    <link href="https://fonts.googleapis.com/css?family=Chonburi|Inconsolata|Lato:300,400,700" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if logged_in? %>
      <script type="text/javascript">
        window.currentUser =
          <%= render("api/users/user.json.jbuilder", user: current_user).html_safe %>;
        window.splash_illustration = "<%= image_url('splashscreen_illustration.png') %>";
      </script>
    <% end %>

    <%= yield %>
  </body>
</html>
